<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.partjava.VirementController">
    <children>
        <Label fx:id="currencyLabel" layoutX="187.0" layoutY="121.0" text="monnaie : {UserObj.account.currency}">
         <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
         </font></Label>

        <Label layoutX="163.0" layoutY="53.0" text="Bénéficiaire :">
         <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
         </font></Label>
        <TextField fx:id="beneficiaryField" layoutX="162.0" layoutY="78.0" prefHeight="25.0" prefWidth="236.0" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #443B7B;" />

        <Label layoutX="163.0" layoutY="121.0" text="Prix">
         <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
         </font></Label>
        <TextField fx:id="amountField" layoutX="162.0" layoutY="146.0" prefHeight="25.0" prefWidth="236.0" style="-fx-border-color: #443B7B; -fx-background-radius: 20; -fx-border-radius: 20;" />

        <Label layoutX="164.0" layoutY="187.0" text="Mot de passe :">
         <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
         </font></Label>
        <TextField fx:id="passwordField" layoutX="162.0" layoutY="210.0" prefHeight="25.0" prefWidth="236.0" style="-fx-border-color: #443B7B; -fx-background-radius: 20; -fx-border-radius: 20;" />

        <Button layoutX="154.0" layoutY="277.0" onAction="#transfer" prefHeight="33.0" prefWidth="114.0" style="-fx-background-color: #443B7B; -fx-background-radius: 20; -fx-border-radius: 20;" text="Transfert" textFill="WHITE" />
        <Button fx:id="returnButton" layoutX="308.0" layoutY="277.0" onAction="#onReturnButtonClick" prefHeight="33.0" prefWidth="107.0" style="-fx-background-color: #443B7B; -fx-background-radius: 20; -fx-border-radius: 20;" text="Retour" textFill="WHITE" />
    </children>
</AnchorPane>
