<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.partjava.InvestController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

             <Label fx:id="currencyLabel" />
    <Label text="Saisissez le nom d'une entreprise dans laquelle vous souhaitez investir et appuyez sur le bouton de recherche pour voir le prix d'une action :">
        <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
        </font>
   </Label>

          <TextField fx:id="companyNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="450.0" promptText="Nom de l'entreprise" style="-fx-background-radius: 20; -fx-border-color: #443B7B; -fx-border-radius: 20;" />
    <Button onAction="#onSearchButtonClick" style="-fx-background-color: #443B7B; -fx-background-radius: 20; -fx-border-radius: 20;" text="Rechercher" textFill="WHITE" />

          <Label text="Entrez le nombre d'actions que vous souhaitez acheter : ">
        <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
        </font>
   </Label>
    <TextField fx:id="amountField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="450.0" promptText="Nombre d'actions" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #443B7B;" />

          <Label text="Mot de passe :">
        <font>
            <Font name="Yu Gothic UI Semibold" size="12.0" />
        </font>
   </Label>
    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="450.0" promptText="Mot de passe" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #443B7B;" />

          <Button onAction="#onPurchaseButtonClick" style="-fx-background-color: #443B7B; -fx-background-radius: 20;" text="Acheter" textFill="WHITE" />
    <Button onAction="#onSellButtonClick" style="-fx-background-color: #443B7B; -fx-background-radius: 20;" text="Vendre" textFill="WHITE" />
    <Button onAction="#onClearButtonClick" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #443B7B; -fx-border-radius: 20;" text="Effacer" textFill="#443b7b" />
</VBox>
