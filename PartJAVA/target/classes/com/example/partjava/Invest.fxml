<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.partjava.InvestController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="currencyLabel"/>
    <Label text="Enter a company you want to invest and press the search button to see the price of one stock:"/>

    <TextField fx:id="companyNameField" promptText="Company Name"/>
    <Button text="Search" onAction="#onSearchButtonClick"/>

    <Label text="Enter the amount of stock:"/>
    <TextField fx:id="amountField" promptText="Amount"/>

    <Label text="Enter password:"/>
    <TextField fx:id="passwordField" promptText="Password"/>

    <Button text="Purchase" onAction="#onPurchaseButtonClick"/>
    <Button text="Sell" onAction="#onSellButtonClick"/>
    <Button text="Clear" onAction="#onClearButtonClick"/>
</VBox>
